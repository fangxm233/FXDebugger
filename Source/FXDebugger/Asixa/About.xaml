<Window x:Class="FXDebugger.Asixa.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FXDebugger"
        mc:Ignorable="d"
        Title="About" Height="328.538" Width="300">
    <Grid>
        <StackPanel Margin="10,10,0,10.4" HorizontalAlignment="Left" Width="274">
            <TextBlock Margin="0,10,0,10" FontSize="18"  Text="Language"/>
            <Separator Background="#11FFFFFF"/>
            <Button FontSize="14" Margin="0,10,0,3" Content="English" />
            <Button FontSize="14" Margin="0,3,0,10" Content="中文" />
            <Separator Background="#11FFFFFF"/>
            <TextBlock Margin="0,10,0,10" FontSize="18"  Text="Developed by"/>
            <Separator Background="#11FFFFFF"/>
            <Button FontSize="14" Margin="0,10,0,3" Content="Fangxm"  Click="Dev_Click" />
            <Button FontSize="14" Margin="0,10,0,3" Content="Asixa"  Click="Dev_Click" />
            
            <Button Name="Source" FontSize="14" Margin="0,10,0,3" Content="Sources"  Click="Dev_Click"/>
        </StackPanel>
    </Grid>
</Window>
